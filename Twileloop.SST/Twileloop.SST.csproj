<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net5.0</TargetFramework>

		<Title>Twileloop.SST</Title>
		<Product>Twileloop.SST</Product>
		<Authors>Twileloop, Sangeeth Nandakumar</Authors>
		<Company>Twileloop</Company>
		<Copyright>Twileloop</Copyright>
		<Description>A central state management library with features like state history, diffing, undo, redo, and deep state cloning.</Description>
		<PackageProjectUrl>https://packages.twileloop.com/twileloop.sst</PackageProjectUrl>
		<PackageIcon>logo.png</PackageIcon>
		<RepositoryUrl>https://github.com/sangeethnandakumar/Twileloop.SST</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<PackageTags>state, single source of truth, singleton, undo, redo, diff, central state handling</PackageTags>

	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="ObjectComparator" Version="3.5.3" />
	</ItemGroup>

	<ItemGroup>
		<None Update="logo.png">
			<Pack>true</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>

</Project>
